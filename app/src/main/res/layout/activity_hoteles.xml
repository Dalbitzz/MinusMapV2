<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HotelesActivity">

    <Button
        android:id="@+id/btnHotelColonRambla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="irColonRambla"
        android:text="hotel Colon Rambla"
        android:textSize="20dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#3ad4cc"
        android:textStyle="bold"
        android:textColor="#3ad4cc"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btnHaciendaDelConde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="irHaciendaDelConde"
        android:text="Hacienda Del Conde Meliá "
        android:textSize="20dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#3ad4cc"
        android:textStyle="bold"
        android:textColor="#3ad4cc"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btnHotelLasAguilas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="irHotelLasAguilas"
        android:text="Hotel Las Águilas"
        android:textSize="20dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#3ad4cc"
        android:textStyle="bold"
        android:textColor="#3ad4cc"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="irAtras"
        android:text="Atras"
        android:textSize="20dp"
        style="?attr/materialButtonOutlinedStyle"
        android:textStyle="bold"
        app:strokeColor="#673AB7"
        android:textColor="#673AB7"
        app:cornerRadius="20dp"/>

</LinearLayout>